<script>
const togglers = document.querySelectorAll('li');

togglers.forEach(li => {
  li.addEventListener('click', function(e) {
    e.stopPropagation(); // prevent parent toggling
    const nested = this.querySelector('.nested');
    if (nested) {
      nested.style.display = nested.style.display === 'block' ? 'none' : 'block';
      this.classList.toggle('expanded');
    }
  });
});
</script>

